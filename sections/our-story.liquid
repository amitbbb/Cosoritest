<section id="our-story">
<div class="our-story">
    <div class="content">
    <div class="text-content">
    <h2>{{section.settings.heading}}</h2>
    <h3>{{section.settings.subheading}}</h3>
    <p>{{section.settings.desc}}</p>
    </div> 
    <div class="image-content">
        <img src="{{section.settings.image | img_url:'master' }}">
    
    </div>   
    </div>
</div>
</section>
{% schema %}
  {
    "name": "Our Story",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Main Heading"
    },
    {
        "type": "text",
        "id": "subheading",
        "label": "Sub Heading"
    },
    {
        "type": "text",
        "id": "desc",
        "label": "Description"
    },
    {
        "type": "image_picker",
        "id": "image",
        "label": "Main Image"
    }
    ],
    "presets": [
      {
        "name": "Our Story",
        "settings": {
        }
      }
    ]
  }
{% endschema %}