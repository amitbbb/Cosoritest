      },
      {
        "type": "text",
        "id": "heading",
        "label": "Main Title"
      },
      {
        "type": "richtext",
        "id": "para",
        "label": "Description"
      }
    ],
    "presets": [
      {
      "name": "Collection-banner section"
      }
    ]
  }
