<section id="bestSeller-section--{{ section.id }}" class="bestSeller-section">
  {% for block in section.blocks %}
  {% assign product = all_products[block.settings.products] %}
  <div class="products">
    <a href="{{ product.url }}" >
    <img src="{{ product | img_url:'master' }}" />
    <div class="product-text">
      <p class="title">{{ product.title  }}</p>
      <p class="price">{{ product.price | money_without_currency }}</p>
    </div>
    <p class="desc">{{ product.description }}</p>
      </a>
  </div>
  {% endfor %}
</section>
<div class="Shop-Bestsellers">
  <a href="{{ product.url }}">Shop Bestsellers</a>
</div>
{% schema %}
  {
  "name": "BestSeller Section",
  "settings": [],
   "blocks": [
     {
       "name": "product",
       "type": "product",
       "settings": [
         {
          "id": "products",
          "type": "product",
          "label": "Choose Products"
         }
       ]
     }
   ],
  "presets": [
    {
      "name": "BestSeller Section",
      "category": "Gallery"
    }
  ]
}
{% endschema %}