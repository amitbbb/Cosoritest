<section id="rating-section--{{ section.id }}" class="rating-section">
  <div class="main-row">
    {% for block in section.blocks %}
    <div class="review-section">
      <div class="review-section-img">
      <img src="{{block.settings.image | img_url:'master'  }}" />
      </div>
      <div class="review-section-text">
        {% if block.settings.star != blank %}
      <img src="{{block.settings.star | img_url:'master'  }}" />
        {% endif %}
        <h2>{{ block.settings.head2 }}</h2>
        <p>{{ block.settings.namedate }}</p>
      </div>
    </div>
    {% endfor %}
  </div>
</section>

{% schema %}
    {
    "name": "Rating Section",
    "settings": [
    ],
    "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
         {
           "type": "image_picker",
           "id": "star",
           "label": "Ratings"
         },
         {
           "type": "text",
           "id": "head2",
           "label": "Heading 2"
         },
         {
           "type": "text",
           "id": "namedate",
           "label": "Name and date"
         }
       ]
     }
  ],
    "presets": [
    {
      "name": "Rating Section",
      "settings": {
      }
    }
  ]
  }
{% endschema %}
