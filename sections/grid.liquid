<section id="grid-section--{{ section.id }}" class="grid-section">
  <h2>{{ section.settings.head1 }}</h2>
  <div class="main-container">
    {% for block in section.blocks %}
      <div class="items">
        <h3>{{ block.settings.heading }}</h3>
        <img src="{{  block.settings.image | img_url:'master'  }}">
      </div>
    {% endfor %}
  </div>
</section>
{% schema %}
{
  "name": "Grid Section",
  "settings": [
    {
      "id": "head1",
      "type": "text",
      "label": "Main Heading"
    }
  ],
  "blocks": [
   {
     "name": "grid",
     "type": "gallery",
     "settings": [
       {
        "id": "heading",
        "type": "text",
        "label": "image Text"
       },
       {
         "type": "image_picker",
      "id": "image",
      "label": "Image"
       }
     ]
   }
 ],
  "presets": [
  {
    "name": "Grid Section",
    "settings": {
    }
  }
]
}
{% endschema %}
