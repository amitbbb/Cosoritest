<section id="rating-section--{{ section.id }}" class="shop-categories">
  <h2>{{ section.settings.heading }}</h2>
  
  <div class="shop-slider">
    {% for block in section.blocks %}
      
    <div class="shop-slider-item">
      <a href="{{ block.url }}">
      <img src="{{ block.settings.image | img_url:'master' }}" />
      <p>{{ block.settings.text }}</p>
      </a>
    </div>
      {% endfor %}
  </div>
  <div class="Shop-Bestsellers">
  <a href="{{ block.url }}">Browse All</a>
  </div>
</section>
{% schema %}
    {
    "name": "Shop Categories",
    "settings": [
      {
          "id": "heading",
          "type": "text",
          "label": "Heading"
        }
    ],
    "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
         {
           "type": "text",
           "id": "text",
           "label": "title"
         },
         {
           "type": "url",
           "id": "url",
           "label": "Colletction Links"
         }
       ]
     }
  ],
    "presets": [
    {
      "name": "Shop Categories",
      "settings": {
      }
    }
  ]
  }
{% endschema %}